<h2>{{title}} Deck</h2>
  <div class="flip-container" id="flip-toggle">
    {{view App.CardView}}
  </div>
	<div class="button-container">
    <button {{action "previousCard" currentCard.index}} class="previous-button"><i class="glyphicon glyphicon-arrow-left"></i></button>
    
    <button {{action "nextCard" currentCard.index}} class="next-button"><i class="glyphicon glyphicon-arrow-right"></i></button>
</div>
<div class="progress">
  <div class="progress-bar" {{bindAttr style="currentProgress"}}></div>
</div>