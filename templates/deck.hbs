<div class="row">
	<div class="span4 cards">
	    <h2>Cards</h2>
	    {{#linkTo "decks"}}Back to Decks{{/linkTo}}
	    <div class="preview-container">
			{{#linkTo "deck.addCard" model}}<div class="small-preview">+ Add a new card</div>{{/linkTo}}
		</div>
		{{#each card in cards}}
			<div class="preview-container">
				{{#linkTo "deck.card" card}}
					<div class="small-preview">{{card.question}}</div>
				{{/linkTo}}
			</div>
		{{/each}}
	</div>

	<div class="span8">
		{{outlet}}
	</div>
</div>
